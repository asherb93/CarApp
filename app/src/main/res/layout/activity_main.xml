<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_road_background"
    android:layoutDirection="ltr"
    tools:context=".Models.MainActivity">

    <!--Hearts box-->
    <LinearLayout
        android:id="@+id/hearts_LAYOUT"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />
    </LinearLayout>


    <GridLayout

        android:id="@+id/main_GRIDLAYOUT"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/hearts_LAYOUT"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:columnCount="3"
        android:rowCount="5">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pose_right"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="30dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pos_center"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pos_left"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"

            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy6"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy7"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy8"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy9"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy10"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="30dp"
            android:layout_weight="1"

            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy11"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="30dp"
            android:layout_weight="1"

            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy12"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_GRIDLAYOUT"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        >

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/left_Button"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:text="Left"
            android:textAlignment="center"
            android:textSize="10sp"
            app:iconGravity="start" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/right_Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="25dp"
            android:text="Right"
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>


</RelativeLayout>