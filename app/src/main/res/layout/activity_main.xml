<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_road_background"
    android:layoutDirection="ltr"
    tools:context=".Models.MainActivity">

    <!--Hearts box-->
    <LinearLayout
        android:id="@+id/hearts_LAYOUT"
        android:layout_width="150dp"
        android:layout_height="30dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_icon_heart" />
    </LinearLayout>


    <GridLayout

        android:id="@+id/main_GRIDLAYOUT"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/hearts_LAYOUT"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="5">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pose_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pos_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_pos_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"

            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_car" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"

            android:layout_margin="20dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"

            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"

            android:layout_rowWeight="1"
            android:layout_column="0"

            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"

            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"

            android:layout_columnWeight="1"

            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy7"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy8"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"

            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"

            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"

            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy11"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"

            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"

            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ic_enemy12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"

            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/ic_enemy" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:id="@+id/left_Button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_arrow_left"
            android:textAlignment="center"
            app:iconGravity="start" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <com.google.android.material.button.MaterialButton
            app:backgroundTint="@null"
            android:id="@+id/right_Button"
            android:layout_width="70dp"
            android:background="@drawable/button_arrow_right"
            android:layout_height="70dp"
            android:textAlignment="center"
             />

    </LinearLayout>


</RelativeLayout>
